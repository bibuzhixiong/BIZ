<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@color/black3">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
    <com.woosii.biz.widget.DropZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_my_login"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:background="@color/black3"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_touxiang"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:src="@drawable/def_touxiang" />

            <ImageView
                android:id="@+id/img_menber"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:src="@drawable/icon_menber"
                android:layout_alignTop="@+id/img_head"
                android:layout_alignRight="@+id/img_head"
                android:layout_marginTop="-6dp"
                android:layout_marginRight="-2dp"
                android:layout_alignEnd="@+id/img_head" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:text="点击登录"/>
                <TextView
                    android:id="@+id/tv_integration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:background="@drawable/shape_search_tv_yellow"
                    android:text="0积分"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:visibility="gone"
                    android:src="@drawable/btn_dizhihei"/>
            <TextView
                android:id="@+id/tv_class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="登录后可以获得更多功能，更佳体验"/>
                </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_tiaozhuan"
            />
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/me_btn_shoucang"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginTop="4dp"
                        android:text="我的收藏"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_my_appointment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/touch_bg"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/me_btn_yuyue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginTop="4dp"
                        android:text="我的预约"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_my_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/touch_bg"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/me_btn_xiaoxi"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black3"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/dp_16"
                        android:text="我的消息"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/gray3"
                ></LinearLayout>
            <LinearLayout
                android:id="@+id/ll_open_menber"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:background="@drawable/touch_bg"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/me_btn_huiyuan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginLeft="6dp"
                    android:text="开通会员"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/gray3"
                ></LinearLayout>
            <LinearLayout
                android:id="@+id/ll_my_question_answer"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:background="@drawable/touch_bg"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/me_btn_wenda"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginLeft="6dp"
                    android:text="我的问答"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray3"
                ></LinearLayout>
            <LinearLayout
                android:id="@+id/ll_code"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:background="@drawable/touch_bg"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/me_btn_kecheng"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginLeft="6dp"

                    android:text="课程二维码"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_narrow_wallat"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/gray3"
                android:orientation="horizontal"
                android:visibility="gone"
                ></LinearLayout>
            <LinearLayout
                android:id="@+id/ll_my_wallat"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/me_btn_qianbao"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginLeft="6dp"
                    android:text="我的钱包"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray3"

                ></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/me_btn_dingdan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginLeft="6dp"
                    android:text="我的订单"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/gray3"
                ></LinearLayout>
            <LinearLayout
                android:id="@+id/ll_seggestion_feedback"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:background="@drawable/touch_bg"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/me_btn_bangzhu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginLeft="6dp"
                    android:text="帮助与反馈"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray3"
                ></LinearLayout>
            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:background="@drawable/touch_bg"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/me_btn_shezhi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginLeft="6dp"
                    android:text="其它设置"/>

            </LinearLayout>

        </LinearLayout>
    </com.woosii.biz.widget.DropZoomScrollView>
</LinearLayout>