<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_head"
            android:layout_width="44dp"
            android:layout_height="44dp"

            android:src="@drawable/icon_head_normal"/>
        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black3"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="一个堕落的天才"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-10-2"/>
    </LinearLayout>
<TextView
    android:id="@+id/tv_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="68dp"
    android:paddingRight="14dp"
    android:textSize="16sp"
    android:text="时代峻峰了商家发了萨菲罗斯就分手了点击发送来得及法律思考的减肥了是空的金粉世家发了"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_divider_narrow"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"/>
</LinearLayout>